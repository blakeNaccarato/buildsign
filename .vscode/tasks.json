{
  "version": "2.0.0",
  "type": "shell",
  "problemMatcher": ["$python"],
  "inputs": [
    {
      "id": "args",
      "description": "Recipe arguments",
      "type": "promptString",
      "default": ""
    },
    {
      "id": "python",
      "type": "pickString",
      "description": "Python recipe to run",
      "default": "",
      "options": ["", "script", "gui-script", "module"]
    },
    {
      "id": "tool",
      "type": "pickString",
      "description": "Tool recipe to run",
      "options": [
        "pre-commit",
        "pyright",
        "ruff",
        "pytest",
        "docs-preview",
        "docs-build"
      ]
    },
    {
      "id": "packaging",
      "type": "pickString",
      "description": "Packaging recipe to run",
      "options": ["build", "release"]
    },
    {
      "id": "setup",
      "type": "pickString",
      "description": "Machine setup recipe to run",
      "options": [
        // "git", //? Requires extra args
        "git-recs  # ğŸ‘¤ Configure Git as recommended.",
        "gh  # ğŸ”‘ Log in to GitHub API.",
        "scripts  # ğŸ”“ Allow running local PowerShell scripts."
      ]
    },
    {
      "id": "name",
      "type": "promptString",
      "description": "Git setup: Enter your GitHub username"
    },
    {
      "id": "email",
      "type": "promptString",
      "description": "Git setup: Enter the email address associated with your GitHub account"
    }
  ],
  "tasks": [
    {
      "label": "ğŸ‘¥ Run contributor environment setup",
      "command": "./j.ps1 con",
      "runOptions": { "runOn": "folderOpen" }
    },
    {
      "label": "ğŸƒ Run shell commands with UV synced...",
      "command": "./j.ps1 run ${input:args}"
    },
    {
      "label": "ğŸŸ£ uv ...",
      "command": "./j.ps1 uv ${input:args}"
    },
    {
      "label": "ğŸƒ uv run ...",
      "command": "./j.ps1 uv-run ${input:args}"
    },
    {
      "label": "â™»ï¸ uv sync ...",
      "command": "./j.ps1 uv-sync ${input:args}"
    },
    {
      "label": "ğŸ Run a Python recipe...",
      "command": "./j.ps1 py-${input:python} ${input:args}"
    },
    {
      "label": "ğŸ“¦ Run a Packaging recipe...",
      "command": "./j.ps1 pkg-${input:packaging} ${input:args}"
    },
    {
      "label": "ğŸ› Build wheel, compile binary, and sign.",
      "group": { "kind": "build", "isDefault": true },
      "command": "./j.ps1 pkg-build"
    },
    {
      "label": "ğŸ§ª pytest",
      "command": "./j.ps1 tool-pytest",
      "group": { "kind": "test", "isDefault": true }
    },
    {
      "label": "âš™ï¸ Run a tool recipe...",
      "command": "./j.ps1 tool-${input:tool} ${input:args}"
    },
    {
      "label": "ğŸ”µ pre-commit --all-files",
      "command": "./j.ps1 tool-pre-commit --all-files"
    },
    {
      "label": "ğŸ’» Run a machine setup recipe...",
      "command": "./j.ps1 setup-${input:setup}"
    },
    {
      "label": "ğŸ‘¤ Set Git username and email...",
      "command": "./j.ps1 setup-git ${input:name} ${input:email}"
    }
  ]
}
