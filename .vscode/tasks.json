{
  "version": "2.0.0",
  "type": "shell",
  "problemMatcher": ["$python"],
  "tasks": [
    {
      "label": "build",
      "command": "uv run just build",
      "icon": { "id": "file-binary" },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "sync",
      "command": "uv sync",
      "icon": { "id": "sync" },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "pre-commit",
      "command": "uv run just pre-commit",
      "icon": { "id": "git-commit" }
    },
    {
      "label": "pre-commit (all files)",
      "command": "uv run just pre-commit --all-files",
      "icon": { "id": "git-commit" }
    },
    {
      "label": "pyright",
      "command": "uv run pyright",
      "icon": { "id": "check" }
    },
    {
      "label": "pytest",
      "command": "uv run pytest",
      "icon": { "id": "beaker" }
    },
    {
      "label": "ruff",
      "command": "uv run ruff",
      "icon": { "id": "check" }
    }
  ]
}
